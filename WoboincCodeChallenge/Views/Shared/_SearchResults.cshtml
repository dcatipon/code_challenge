@model WoboincCodeChallenge.Models.BookListModel

@foreach (var book in Model.searchItems)
{
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2 text-center">
                <img src="@book.thumbnail" />
            </div>
            <div class="col-md-10">
                <h4>@Html.DisplayFor(modelItem => book.title)<br /><small>@Html.DisplayFor(modelItem => book.subtitle)</small></h4>
                <div class="col-md-3">
                    <label>Author(s):</label> @if (book.authors != null)
                    {
                        for (int i = 0; i < book.authors.Length; i++)
                        {
                            @Html.DisplayFor(modelItem => book.authors[i]) <br />
                        }
                    }
                    <label>Publisher:</label> @Html.DisplayFor(modelItem => book.publisher) <br />
                    <label>Publication Date:</label> @Html.DisplayFor(modelItem => book.publicationDate) <br />

                    <label>List Price:</label> @if(book.listPrice != 0)
                                                    { <text>$</text>@Html.DisplayFor(modelItem => book.listPrice) <br /> }
                                               else
                                                    { <text>Not Listed<br /></text> }
                    
                    <label>Retail Price:</label> @if(book.retailPrice != 0)
                                                    { <text>$</text>@Html.DisplayFor(modelItem => book.retailPrice) <br /> }
                                                 else
                                                    {<text>Not Listed<br /></text>}
                    <label>eBook:</label> @if (book.isEbook == true)
                                            { <text>Yes<br /></text> }
                                          else
                                            { <text>No<br /></text> }
                    <p><br /><a href="@book.infoLink" target="_blank">More Information</a></p>
                </div>
                <div id="descriptionBlock" class="col-md-9 comment">
                    @Html.DisplayFor(modelItem => book.description)
                </div>
                
            </div>
        </div>

    </div>
    <hr />
}